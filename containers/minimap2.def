Bootstrap: docker
From: staphb/samtools:1.10

# See https://github.com/StaPH-B/docker-builds/blob/master/minimap2/2.17/Dockerfile

%post
    apt-get update
    apt-get install -y --no-install-recommends curl bzip2
    curl -L 'https://github.com/lh3/minimap2/releases/download/v2.17/minimap2-2.17_x64-linux.tar.bz2' | tar --no-same-owner -jxvf -
    apt-get purge -y --auto-remove curl bzip2
    apt-get autoclean
    rm -rf /var/lib/apt/lists/*

%runscript
    exec minimap2 "$@"

%environment
    export PATH="/minimap2-2.17_x64-linux:$PATH"
